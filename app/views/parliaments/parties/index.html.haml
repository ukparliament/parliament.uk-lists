- title("#{t('parties_and_groups').capitalize} - #{@parliament.date_range(date_format: '%Y')} #{t('parliament')}")
%section.section--primary
  .container
    %h1
      %span= t('parties_and_groups').capitalize
      = link_to("#{@parliament.date_range(date_format: '%Y')} #{t('parliament').capitalize}", parliament_path(@parliament.graph_id))

%section#content{ tabindex: "0" }
  .container
    %ul.list--block
      - @parties.each do |party|
        %li
          .list--details
            %h2= link_to(party.name, parliament_party_path(@parliament.graph_id, party.graph_id))
          .list--details
            %span.count= party.count
            = t('mp_count', count: party.member_count)
