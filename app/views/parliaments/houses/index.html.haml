- title("#{t('house_plural').capitalize}")
%section.section--primary
  .container
    %h1
      %small= link_to("#{@parliament.date_range(date_format: '%Y')} #{t('parliament').capitalize}", parliament_path(@parliament.graph_id))
      %span= "#{t('house_plural').capitalize}"

%section#content{ tabindex: "0" }
  .container
    - @houses.each do |house|
      %ul.list--block
        %li
          .card
            .card__details
              %h2= link_to(house.name, parliament_house_path(@parliament.graph_id, house.graph_id))
