- page_title = title("#{t('current_and_former').capitalize} #{t('constituency_plural')} #{t('a_to_z.a_to_z')} #{t('a_to_z.showing_results')} #{params[:letter].capitalize}")
.section--primary
  .container
    %h1
      %span= "#{t('current_and_former').capitalize} #{t('constituency_plural')}"
      %span.context= "#{t('a_to_z.a_to_z')} - #{t('a_to_z.showing_results')} #{params[:letter].capitalize}"

    = render partial: 'pugin/components/navigation-letter', locals: { route_symbol: :constituencies_a_z_letter_path, all_path: @all_path  }

%section#content{ tabindex: "0" }
  .container
    = render partial: "pugin/elements/list", locals: { item_type: "constituencies", data: @constituencies }
