- title("#{@place.name} #{t('constituency_plural')} #{t('a_to_z.a_to_z')} #{t('a_to_z.showing_results')} '#{params[:letter]}'")
.section--primary
  .container
    %h1
      %span= "#{@place.name} #{t('constituency_plural')}"
      %span.context= "#{t('a_to_z.a_to_z')} - #{t('a_to_z.showing_results')} #{params[:letter].capitalize}"
    = render partial: 'pugin/components/navigation-letter', locals: { route_symbol: :places_show_constituencies_a_z_letter_path, route_args: [@place.gss_code], all_path: :places_show_constituencies_path }

%section#content{ tabindex: "0" }
  .container
    = render partial: "pugin/elements/list", locals: { item_type: "constituencies", data: @constituencies }
