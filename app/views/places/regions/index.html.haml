.section--primary
  .container
    %h1
      %span= title(t('region_plural').capitalize)

%section#content{ tabindex: "0" }
  .container
    %ul.list--block
      - @places.each do |place|
        %li
          .card
            .card__details
              %h2= link_to(place.name, places_show_path(place.gss_code))
              %p= "#{place.constituency_count} #{t('constituency_plural').capitalize}"
