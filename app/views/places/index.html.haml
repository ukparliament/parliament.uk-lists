.section--primary
  .container
    %h1= title(t('region_plural').capitalize)

%section#content
  .container
    %ul.list--block
      - @places.each do |place|
        %li
          .list--details
            %h2= link_to place.name, places_show_path(place.gss_code)
            %p= "#{place.constituency_count} #{t('constituency_plural').capitalize}"
