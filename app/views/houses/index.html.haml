- page_title = title(t('house_plural').capitalize)

#content.section--primary{ tabindex: "0" }
  .container
    %h1
      %span= page_title

%section
  .container
    %ul.list--block
      - @houses.each do |house|
        %li
          .card
            .card__details
              %h2= link_to(house.name, house_path(house.graph_id))
              - if Parliament::Utils::Helpers::HousesHelper.commons?(house)
                %p= "#{t('.all_mps_info')}"
              - else
                %p= "#{t('.all_lords_info')}"
