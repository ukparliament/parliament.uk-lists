      %span= "#{@party.name} - #{t('current_and_former').capitalize} #{@current_person_type}"
      %span= "#{t('a_to_z.a_to_z')} - #{t('a_to_z.showing_results')} #{params[:letter].capitalize}"

    = render partial: 'pugin/components/navigation-letter', locals: { route_symbol: :house_parties_party_members_a_z_letter_path, route_args: [@house.graph_id, @party.graph_id], all_path: @all_path}

%section#content{:tabindex => "0"}
  .container
    = render partial: "pugin/elements/list", locals: {item_type: "people", data: @people}
