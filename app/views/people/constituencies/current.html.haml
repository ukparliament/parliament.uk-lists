#content.section--primary{ tabindex: "0" }
  .container
    %h1
      %span= title("#{@person.display_name} - #{t('.title', current: t('current').capitalize, constituency: t('constituency'))}")

- unless @constituency.nil?
  %section
    .container
      %ul.list--block
        %li
          .card
            .card__details
              %h2= link_to(@constituency.name, party_path(@constituency.graph_id))
              %p= @constituency.seat_incumbencies.first.date_range
