#content.section--primary{ tabindex: "0" }
  .container
    %h1
      %span= title("#{@person.display_name} - #{t('.title', current: t('current').capitalize, house: t('house'))}")

- unless @house.nil?
  %section
    .container
      %ul.list--block
        %li
          .card
            .card__details
              %h2= link_to(@house.name, house_path(@house.graph_id))
              - unless @house.seat_incumbencies.empty?
                %p= @house.seat_incumbencies.first.date_range

              - unless @house.house_incumbencies.empty?
                %p= @house.house_incumbencies.first.date_range
