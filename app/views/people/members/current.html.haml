-page_title = title("#{t('current').capitalize} #{t('mps_and_lords')}")
.section--primary
  .container
    %h1
      %span= "#{t('current').capitalize} #{t('mps_and_lords')}"
      %span.context= "#{t('a_to_z.a_to_z')} - #{t('a_to_z.showing_all')}"

    = render partial: 'pugin/components/navigation-letter', locals: { route_symbol: :people_members_current_a_z_letter_path }

    - if Parliament::Utils::Helpers::FlagHelper.dissolution?
      = render partial: 'shared/dissolution_message'
    - elsif Parliament::Utils::Helpers::FlagHelper.election? || Parliament::Utils::Helpers::FlagHelper.post_election?
      = render partial: 'shared/election_message'

%section#content{ tabindex: "0" }
  .container
    = render partial: "pugin/elements/list", locals: { item_type: "people", data: @people }
