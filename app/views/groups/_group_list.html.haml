- if groups.empty?
  = render partial: 'shared/empty_list', locals: { title: nil, description: t('no_content.empty_list.groups.description', letter: params[:letter].upcase) }
- else
  %ul.list--block
    - groups.each do |group|
      - if group.name.present?
        %li
          .card
            .card__details
              %h2= link_to(group.name, group_path(group.graph_id))
