- page_title = title("#{t('current_and_former').capitalize} #{t('parties_and_groups')} #{t('a_to_z.a_to_z')} #{t('a_to_z.showing_results')} #{params[:letter].capitalize}")
.section--primary
  .container
    %h1
      %span= "#{t('current_and_former').capitalize} #{t('parties_and_groups')}"
      %span= "#{t('a_to_z.a_to_z')} - #{t('a_to_z.showing_results')} #{params[:letter].capitalize}"

    = render partial: 'pugin/components/navigation-letter', locals: { route_symbol: :parties_a_z_letter_path, all_path: @all_path }

%section#content
  .container
    = render partial: 'party_list', locals: {parties: @parties}
