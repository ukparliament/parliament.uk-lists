-if @parties.empty?
  = render partial: 'shared/empty_list', locals: {title: nil, description: t('no_content.empty_list.parties.description', letter: params[:letter].upcase)}
-else
  %ul.list--block
    - @parties.each do |party|
      %li
        .list--details
          %h2= link_to party.name, party_path(party.graph_id) if party.name.present?
